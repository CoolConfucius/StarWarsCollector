extends layout

block content
  h1= title
  if state === "people"
    h2= "Page: " + page
      ul
        each person in people
          li
            a(href='/sw/person/'+person.url.split('/')[5])= person.name
  
  if state === "person"
    h1= person.name
    h3= "Homeworld: "+homeworld
    h3 Films stared in: 
      ul
        each title in films
          li= title
    h3 Other information: 
      ul 
        li= "height: " + person.height
        li= "mass: " + person.mass
        li= "hair color: " + person.hair_color 
        li= "skin color: " + person.skin_color
        li= "eye color: " + person.eye_color
        li= "birth year: " + person.birth_year 
        li= "gender: " + person.gender


  button.btn.btn-default#go(type='submit') Add
  hr
  a.btn.btn-primary(href='/sw/people/1') Page 1
  a.btn.btn-primary(href='/sw/people/2') Page 2
  a.btn.btn-primary(href='/sw/people/3') Page 3
  a.btn.btn-primary(href='/sw/people/4') Page 4
  a.btn.btn-primary(href='/sw/people/5') Page 5
  a.btn.btn-primary(href='/sw/people/6') Page 6
  a.btn.btn-primary(href='/sw/people/7') Page 7
  a.btn.btn-primary(href='/sw/people/8') Page 8
  a.btn.btn-primary(href='/sw/people/9') Page 9
block scripts
  script(src="/js/addChar.js")
  
